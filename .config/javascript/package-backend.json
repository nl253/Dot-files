  "version": "0.0.1-alpha",
  "license": "MIT",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "build": "node_modules/.bin/webpack",
    "clean": "find -name tags -and -type f -exec rm {} +; rm -rf {docs,dist}/*",
    "docs": "node_modules/.bin/jsdoc --verbose --destination docs/ --recurse $(git ls-files | grep -E '\\.[jt]s$')",
    "tslint": "node_modules/.bin/tslint $(git ls-files | grep -E '\\.[tj]s$')",
    "read": "cd docs && python3 -m http.server",
    "start": "node --harmony dist/app.js",
    "test": "node_modules/.bin/jest"
  },
  "dependencies": {
    "@types/body-parser": "*",
    "@types/express-session": "*",
    "@types/express-validator": "*",
    "@types/faker": "*",
    "@types/jest": "*",
    "@types/morgan": "*",
    "@types/mongoose": "*",
    "@types/node": "*",
    "@types/passport": "*",
    "@types/validator": "*",
    "babel-cli": "*",
    "babel-core": "*",
    "babel-polyfill": "*",
    "babel-preset-env": "*",
    "body-parser": "~1.17.1",
    "express": "~4.15.2",
    "express-session": "*",
    "express-validator": "*",
    "mongoose": "^4.11.11",
    "morgan": "~1.8.1",
    "ts-loader": "*",
    "typescript": "*",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony-v2.8.22",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "validator": "*",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "tslint": "*",
    "ts-jest": "*",
    "tslint-config-standard": "*",
    "faker": "^4.1.0",
    "jest": "^21.0.2",
    "js-beautify": "*",
    "jsdoc": "*",
    "nodemon": "*"
  }
}
