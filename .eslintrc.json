{
  "root": true,
  "plugins": [
    "jest",
    "promise",
    "optimize-regex",
    "compat",
    "html",
    "json"
  ],
  "extends": [
    "standard",
    "plugin:node/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jest/recommended",
    "plugin:promise/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "jest/globals": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "codeFrame": false,
    "ecmaFeatures": {
      "jsx": false,
      "impliedStrict": true
    }
  }
}
