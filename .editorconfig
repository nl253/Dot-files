# EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
tab_width = 4

[*.vorg]
trim_trailing_whitespace = false
tab_width = 8
indent_size = 4

[*.{js,ts,jsx,json,css,md,yml}]
trim_trailing_whitespace = true
tab_width = 4
indent_size = 2
indent_style = space

[*.{rs,py}]
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.{wiki,rst}]
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab

[*.{sh,zsh,yml,yaml}]
trim_trailing_whitespace = true
indent_size = 2
indent_style = space
max_line_length = 120

[*.{vim}]
trim_trailing_whitespace = false
indent_size = 4
indent_style = tab

[{Makefile,makefile}]
indent_size = 2
indent_style = space

# Vim plugin supports the following EditorConfig properties:
#	- indent_style
#	- indent_size
#	- tab_width
#	- end_of_line
#	- charset
#	- insert_final_newline (Feature +fixendofline (available on Vim 7.4.785+) 
#	  or PreserveNoEOL is required for this property)
#	- trim_trailing_whitespace
#	- max_line_length
#	- root (only used by EditorConfig core)
