# i3 config file (v4)

# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1
set $WINKEY Mod4
set $ALTKEY Mod1

# COLORS
set $deepblue #1874cd
set $darkmagenta #8b008b
set $darkorange #cd6600
set $black #000000
set $white #ffffff
set $darkgrey #707070
set $brickred #b22222
set $darkred #8b0000
set $red #ff3300
set $darkgold #eead0e
set $lightblue #3399ff

# Configure border style <normal|1pixel|pixel xx|none|pixel>
new_window pixel 1
new_float normal

# Hide borders
hide_edge_borders none

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:monospace 13

# start a terminal
bindsym $WINKEY+Return exec alacritty -e tmux&

# kill focused window (Just like in Windows)
bindsym $ALTKEY+F4 kill

# start program launcher
bindsym $WINKEY+p exec --no-startup-id rofi -width 20 -location 0 -matching fuzzy -lines 10 -terminal alacritty -show run

################################################################################################
## sound-section - DO NOT EDIT if you wish to automatically upgrade Alsa -> Pulseaudio later! ##
################################################################################################

exec --no-startup-id volumeicon
bindsym $WINKEY+Ctrl+m exec terminal -e 'alsamixer'

bindsym $mod+Ctrl+m exec pavucontrol

################################################################################################

# Screen brightness controls
# bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
# bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"

bindsym Print exec "scrot %Y-%m-%d_%H-%M_$wx$h.png -e mv $f ~/Pictures/ ; exec notify-send 'Prinscreen saved to ~/'"

# change focus
# added to mimick Xmonad
bindsym $WINKEY+Tab focus left   

# move focused window
bindsym $WINKEY+Shift+h move left
bindsym $WINKEY+Shift+j move down
bindsym $WINKEY+Shift+k move up
bindsym $WINKEY+Shift+l move right
#bindsym $WINKEY+Shift+odiaeresis move right # DEFAULT

# toggle fullscreen mode for the focused container
bindsym F11 fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $WINKEY+s layout stacking
bindsym $WINKEY+t layout tabbed
bindsym $WINKEY+e layout toggle split

# toggle tiling / floating
bindsym $WINKEY+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $WINKEY+space focus mode_toggle

# focus the parent container
bindsym $WINKEY+a focus parent

# move the currently focused window to the scratchpad
bindsym $WINKEY+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $WINKEY+minus scratchpad show

#navigate workspaces next / previous
bindsym $WINKEY+Right workspace next

# Workspace names
# to display names or symbols instead of plain workspace numbers you can use
# something like: set $ws1 1:mail
#                 set $ws2 2:ï‚¬
set $ws1 1:TERM
set $ws2 2:CHROME
set $ws3 3:PP
set $ws4 4:OTHER
set $ws5 5:OTHER
set $ws6 6:OTHER
set $ws7 7:OTHER
set $ws8 8:OTHER
set $ws9 9:OTHER
set $ws10 10:OTHER

# switch to workspace
bindsym $WINKEY+1 workspace $ws1
bindsym $WINKEY+2 workspace $ws2
bindsym $WINKEY+3 workspace $ws3
bindsym $WINKEY+4 workspace $ws4
bindsym $WINKEY+5 workspace $ws5
bindsym $WINKEY+6 workspace $ws6
bindsym $WINKEY+7 workspace $ws7
bindsym $WINKEY+8 workspace $ws8
bindsym $WINKEY+9 workspace $ws9
bindsym $WINKEY+0 workspace $ws10

# Move focused container to workspace
bindsym $WINKEY+Ctrl+1 move container to workspace $ws1
bindsym $WINKEY+Ctrl+2 move container to workspace $ws2
bindsym $WINKEY+Ctrl+3 move container to workspace $ws3
bindsym $WINKEY+Ctrl+4 move container to workspace $ws4
bindsym $WINKEY+Ctrl+5 move container to workspace $ws5
bindsym $WINKEY+Ctrl+6 move container to workspace $ws6
bindsym $WINKEY+Ctrl+7 move container to workspace $ws7
bindsym $WINKEY+Ctrl+8 move container to workspace $ws8
bindsym $WINKEY+Ctrl+9 move container to workspace $ws9
bindsym $WINKEY+Ctrl+0 move container to workspace $ws10

# Move to workspace with focused container
bindsym $WINKEY+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $WINKEY+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $WINKEY+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $WINKEY+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $WINKEY+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $WINKEY+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $WINKEY+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $WINKEY+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $WINKEY+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $WINKEY+Shift+0 move container to workspace $ws10; workspace $ws10

# Open applications on specific workspaces
assign [class="google-chrome"] $ws2
assign [class="alacritty"] $ws1
