
let mapleader = " "
let maplocalleader = ","
set hlsearch
set incsearch
set hidden
set lazyredraw
set noerrorbells
set foldmethod=marker
set matchpairs+=<:>
set nostartofline
set visualbell
set diffopt=filler,vertical
set wildmode=full
set spelllang=en_gb
set nospell
set number
set surround mps+=<:>
set clipboard+=unnamed
set wrap
set complete=.,w,t,
set thesaurus=~/.config/nvim/thesaurus.txt
set dictionary=~/.dicts/frequent.dict 
set ignorecase
set wildignore+=*/.git/*,*/.hg/*,*/.svn/*
set norelativenumber
"set scrolloff=50

" commands
command! DeleteEmptyLines execute 'g/^\s*$/d'

" but preserve ideavim defaults
nnoremap g<c-o> <c-o>
nnoremap g<c-i> <c-i>

" search
nmap <Leader><Leader> :action SearchEverywhere<CR>
nmap <Leader>/ :action GotoSymbol<CR>
nmap <C-v> :action GotoClass<CR>
nmap <C-x><C-f> :action GotoFile<CR>

" built in search looks better
"nmap / :action Find<CR>
" built-in navigation to navigated items works better
nmap <c-o> :action Back<CR>
nmap <c-i> :action Forward<CR>

" but preserve ideavim search
"nmap g/ /

" switcher
nmap <Leader>ss :action Switcher<CR>

" scratchpad
nmap <Leader>p :e ~/.config/nvim/scratchpads/scratchpad.java<CR>

" execute
nmap <Leader>me :action Run<CR>
nmap <Leader>d :action DebugClass<CR>
nmap <Leader>D :action Debug<CR>
nmap <Leader>u :action FindUsages<CR>

" syntax check
nmap <Leader>mS :action CheckStyleCurrentFileAction<CR>

" jump
nmap <Leader>ji :action GotoImplementation<CR>
nmap <Leader>js :action GotoSuperMethod<CR>
nnoremap <Leader>jt :action GotoTest<CR>

nnoremap <Leader>ga :action Git.Add<CR>
nnoremap <Leader>gb :action Git.Branches<CR>
nnoremap <Leader>gs :action ChangesView.Commit<CR>
nnoremap <Leader>gD :action ChangesView.Diff<CR>
nnoremap <Leader>gl :action Git.Log<CR>
nnoremap <Leader>gp :action Git.Push<CR>
nnoremap <Leader>gU :action Git.Uncommit<CR>
"nnoremap <Leader>gl :action HideAllToolWindows<CR>

" edit

" toggle
nmap <Leader>tw :action EditorToggleUseSoftWraps<CR>
nmap <Leader>tW :action EditorToggleShowWhitespaces<CR>

" editing
nmap <Leader>cs :action ChangeSignature<CR>
nmap <LocalLeader>r :action RenameElement<CR>
"nnoremap <Leader>hd :action QuickJavaDoc<CR>
"nmap <C-q> :action QuickDocumentation<CR>
nnoremap ]] :action MethodDown<CR>
nnoremap [[ :action MethodUp<CR>

" enter newlines
nnoremap <CR> :action EditorEnter<CR>
inoremap <CR> <C-o>:action EditorEnter<CR>

" vim: noreadonly modifiable
