
let mapleader = " "
set virtualedit=all
let maplocalleader = ","
set hlsearch
set incsearch
set hidden
set lazyredraw
set noerrorbells
set foldmethod=marker
set matchpairs+=<:>
set nostartofline
set visualbell
set diffopt=filler,vertical
set wildmode=full
set spelllang=en_gb
set nospell
set number
set surround mps+=<:>
set clipboard+=unnamed
set wrap
set complete=.,w,t,
set thesaurus=~/.config/nvim/thesaurus.txt
set dictionary=~/.dicts/frequent.dict 
set ignorecase
set wildignore+=*/.git/*,*/.hg/*,*/.svn/*
set norelativenumber
"set scrolloff=50

" preserve ideavim defaults
nnoremap g<c-o> <c-o>
nnoremap g<c-i> <c-i>

" built in search looks better
"nmap / :action Find<CR>
" built-in navigation to navigated items works better
nmap <c-o> :action Back<CR>
nmap <c-i> :action Forward<CR>

" enter newlines
inoremap <CR> <C-o>:action EditorEnter<CR>

" switcher
nnoremap <Leader>s<Leader> :action Switcher<CR>
nnoremap <Leader>m<Leader> :action ShowBookmarks<CR>
nnoremap m0 :action ToggleBookmark0<CR>
nnoremap m1 :action ToggleBookmark1<CR>
nnoremap m2 :action ToggleBookmark2<CR>
nnoremap m3 :action ToggleBookmark3<CR>
nnoremap m4 :action ToggleBookmark4<CR>
nnoremap m5 :action ToggleBookmark5<CR>
nnoremap m6 :action ToggleBookmark6<CR>
nnoremap m7 :action ToggleBookmark7<CR>
nnoremap m8 :action ToggleBookmark8<CR>
nnoremap m9 :action ToggleBookmark9<CR>
nnoremap `0 :action GotoBookmark0<CR>
nnoremap `1 :action GotoBookmark1<CR>
nnoremap `2 :action GotoBookmark2<CR>
nnoremap `3 :action GotoBookmark3<CR>
nnoremap `4 :action GotoBookmark4<CR>
nnoremap `5 :action GotoBookmark5<CR>
nnoremap `6 :action GotoBookmark6<CR>
nnoremap `7 :action GotoBookmark7<CR>
nnoremap `8 :action GotoBookmark8<CR>
nnoremap `9 :action GotoBookmark9<CR>
nnoremap '0 :action GotoBookmark0<CR>
nnoremap '1 :action GotoBookmark1<CR>
nnoremap '2 :action GotoBookmark2<CR>
nnoremap '3 :action GotoBookmark3<CR>
nnoremap '4 :action GotoBookmark4<CR>
nnoremap '5 :action GotoBookmark5<CR>
nnoremap '6 :action GotoBookmark6<CR>
nnoremap '7 :action GotoBookmark7<CR>
nnoremap '8 :action GotoBookmark8<CR>
nnoremap '9 :action GotoBookmark9<CR>

" Leader
nnoremap <CR> :action GotoImplementation<CR>
nnoremap <Leader>r :action Refactorings.QuickListPopupAction<CR>
nnoremap <Leader>c<Leader> :action CommentByLineComment<CR>
nnoremap <Leader>u :action ShowUsages<CR>
nnoremap <Leader>* :action ShowUsages<CR>
nnoremap <Leader>f :action GotoFile<CR>
nnoremap <Leader>h :action TypeHierarchy<CR>
nnoremap <Leader>i :action com.jetbrains.python.console.RunPythonConsoleAction<CR>
nnoremap <Leader>s :action GotoSymbol<CR>
nnoremap <Leader>t :action GotoSymbol<CR>
nnoremap <Leader>C :action GotoClass<CR>

" search
nmap <Leader><Leader> :action SearchEverywhere<CR>

nnoremap <Esc> <Esc>:action HideSideWindows<CR>

" editing
"nnoremap <Leader>hd :action QuickJavaDoc<CR>
nnoremap ]] :action MethodDown<CR>
nnoremap [[ :action MethodUp<CR>

" GIT
nnoremap <Leader>ga :action Git.Add<CR>
nnoremap <Leader>gb :action Git.Branches<CR>
nnoremap <Leader>gs :action ChangesView.Commit<CR>
nnoremap <Leader>gD :action ChangesView.Diff<CR>
nnoremap <Leader>gl :action Vcs.Show.Log<CR>
nnoremap <Leader>gp :action Vcs.Push<CR>
nnoremap <Leader>gU :action Git.Uncommit<CR>
nnoremap <Leader>gg :action Vcs.QuickListPopupAction<CR>
" vim: noreadonly modifiable
