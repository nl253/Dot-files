{
	"root": true,
	"plugins": [
		"jest",
		"compat",
		"react",
		"smells",
		"promise",
		"babel",
		"optimize-regex",
		"json",
		"html",
		"fp",
		"filenames"
	],
	"extends": [
		"plugin:import/errors",
		"plugin:import/warnings",
		"plugin:jest/recommended",
		"plugin:react/recommended",
		"plugin:fp/recommended",
		"plugin:promise/recommended"
	],
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
    "jest/globals": true,
		"jquery": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": { "jsx": true, "impliedStrict": true },
		"codeFrame": false

	},
	"settings": {
		"html/html-extensions": [".html", ".xhtml", ".twig", ".nunj", "handlebars", ".hbs"],
        "html/report-bad-indent": 1
	},
	"rules": {
		"arrow-spacing": 1,
		"babel/new-cap": 1,
		"babel/no-invalid-this": 1,
		"babel/object-curly-spacing": 1,
		"babel/semi": 0,
		"brace-style": [2, "stroustrup"],
		"comma-dangle": [1, "always-multiline"],
		"comma-spacing": [1, { "before": false, "after": true }],
		"comma-style": [2, "last"],
		"compat/compat": 2,
		"curly": 1,
		"default-case": 1,
		"eqeqeq": [2, "always"],
		"filenames/match-exported": 0,
		"filenames/match-regex": 0,
		"filenames/no-index": 0,
		"fp/no-arguments": 1,
		"fp/no-class": 0,
		"fp/no-delete": 1,
		"fp/no-events": 1,
		"fp/no-get-set": 1,
		"fp/no-let": 1,
		"fp/no-loops": 1,
		"fp/no-mutating-assign": 1,
		"fp/no-mutating-methods": 1,
		"fp/no-mutation": 1,
		"fp/no-nil": 1,
		"fp/no-proxy": 1,
		"fp/no-rest-parameters": 1,
		"fp/no-this": 1,
		"fp/no-throw": 1,
		"fp/no-unused-expression": 1,
		"fp/no-valueof-field": 1,
		"func-style": [2, "declaration", { "allowArrowFunctions": true }],
		"indent": [1, 4],
		"key-spacing": 1,
		"keyword-spacing": 1,
		"linebreak-style": [2, "unix"],
		"no-dupe-args": 2,
		"no-duplicate-case": 2,
		"no-duplicate-imports": 1,
		"no-empty": 2,
		"no-empty-function": 2,
		"no-empty-pattern": 1,
		"no-extra-boolean-cast": 2,
		"no-extra-label": 1,
		"no-extra-parens": 2,
		"no-extra-semi": 1,
		"no-invalid-regexp": 2,
		"no-redeclare": 2,
		"no-regex-spaces": 1,
		"no-return-assign": 2,
		"no-undefined": 2,
		"no-unreachable": 2,
		"no-unused-expressions": 1,
		"no-unused-vars": 1,
		"no-use-before-define": 2,
		"no-useless-concat": 1,
		"no-useless-escape": 1,
		"no-useless-return": 1,
		"no-var": 1,
		"optimize-regex/optimize-regex": 1,
		"prefer-numeric-literals": 1,
		"quotes": [1, "double"],
		"semi": [1, "never"],
		"smells/no-complex-chaining": 1,
		"smells/no-complex-switch-case": 1,
		"smells/no-setinterval": 1,
		"smells/no-switch": 1,
		"smells/no-this-assign": 1,
		"sort-imports": 0,
		"strict": 0,
		"vars-on-top": 2,
		"yoda": [1, "never"]
	}
}
