
# utils
snippet "\\?b(egin)?" "begin{} / end{} block [tex]" br
\begin{${1:something}}
	${0:${VISUAL}}
\end{$1}
endsnippet

# general formatting

snippet em "Emphasis [tex]"
\empf{
endsnippet

snippet "bf|bold" "Bold [tex]" r
\textbf{
endsnippet

snippet it "Italics [tex]"
\textit{
endsnippet

snippet center "Quote [tex]" b
\begin{center}
  $1
\end{center}
endsnippet

# lists

snippet "dl(ist)?" "Description (definition) list [tex]" r
\begin{description}
  \item [${1:label}] ${2:Description of the first item.}
\end{description}
endsnippet

snippet ol "Ordered list [tex]"
\begin{enumerate}		
  \item ${1:multithreading}
\end{enumerate}		
endsnippet

snippet "list|ul" "List [tex]" r
\begin{itemize}		
  \item ${1:multithreading}
\end{itemize}		
endsnippet

# page layout

snippet "col[umns]{,8}" "Multi-column layout (multicol) [tex]" rb
\begin{multicols}{2}
  $0
\end{multicols}
endsnippet

snippet table "Table [tex]" b
\begin{center}
\begin{tabular}{ |c|c|c| } 
  \hline
  cell1 & cell2 & cell3 \\ 
  cell4 & cell5 & cell6 \\ 
  cell7 & cell8 & cell9 \\ 
  \hline
\end{tabular}
\end{center}
endsnippet

# code (minted) / verbatim

snippet "verb[atim]{,8}" "Verbatim - literal [tex]" r
\begin{verbatim}
  $0
\end{verbatim}
endsnippet

snippet "codes(etup)?" "Code {setup} (minted) [tex]" r
% coding highlighting
\usepackage{minted}
endsnippet

snippet code "Code (minted) [tex]" 
\begin{minted}{${1:python}}
  %% code block here
\end{minted}
endsnippet

# sections, paragraphs, footnotes

snippet "sec[tion]{,7}" "Section [tex]" r
\section*{$0}
endsnippet

snippet "par[agrh]{,7}" "Paragraph [tex]" r
\paragraph{$0}
endsnippet

snippet "subs[ection]{,7}" "Sub-section [tex]" r
\subsection*{$0}
endsnippet

snippet "\\?f(oot)?note" "Footnote [tex]" r
\footnote{$0}
endsnippet 

snippet toc "Table of Contents [tex]" b
\tableofcontents
endsnippet

snippet "tocl(ine)?" "Table of Contents [tex]" br
\section*{${1:Unnumbered Section Name}}
endsnippet

# elements

snippet quote "Quote [tex]" b
\begin{quote}
  ${1:Lorem  eiusmod tempor 
  incididunt dolore magna aliqua. }
\end{quote}
endsnippet

snippet "abs[tract]{,7}" "Abstract [tex]" r
\begin{abstract}
  This is a simple paragraph at the beginning of the 
  document. A brief introduction about the main subject.
\end{abstract}
endsnippet

# logic and proof

snippet proof "Proof [tex]" b
\begin{proof}
  ${1:This follows from}
  \[${2:e^{x+y}=e^xe^y. \qedhere}\]
\end{proof}
endsnippet

# images (graphix)

snippet "imgs(etup)?" "Embed image {setup} (graphix) [tex]" r
\usepackage{graphicx}
\graphicspath{ {img/} }
endsnippet

snippet img "Embed image (graphix) [tex]"
\begin{figure}[h]
  \centering
  \includegraphics[width=0.25\textwidth]{mesh}
  \caption{a nice plot}
  \label{fig:mesh1}
\end{figure}
endsnippet

snippet remark "Remark [tex]" 
\begin{remark}
  ${1:This statement is true, I guess.}
\end{remark}
endsnippet

snippet proof "Proof [tex]" 
\begin{proof}
  This is a simple paragraph at the beginning of the 
  document. A brief introduction about the main subject.
\end{proof}
endsnippet

snippet theorem "Theorem [tex]"
\begin{theorem}
  ${1:theorem text}
\end{theorem} 
endsnippet

snippet lemma "Lemma [tex]" 
\begin{lemma}
  This is a simple paragraph at the beginning of the 
  document. A brief introduction about the main subject.
\end{lemma}
endsnippet

