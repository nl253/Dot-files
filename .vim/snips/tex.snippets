endsnippet

snippet "url|link" "URL (hyperref) [tex]" r
\url{
endsnippet

snippet "href|link" "Hyperlink (hyperref) [tex]" r
\href{${1:https://github.com/nl253}}{${2:GitHub}}
endsnippet

# math (amsmath)

snippet "matr[ix]{,3}" "Matrix (amsmath) [tex]" r
\[
  \begin{bmatrix}
    11 & 1  & x_{2}\\
    22 & 1  & x_{3}\\
    11 & 1  & x_{1}\\
    11 & 21 & 33\\
  \end{bmatrix}
\]
endsnippet

snippet "frac[tion]{,8}" "Fraction (amsmath) [tex]" r
\begin{align*}
  f(x) &= x^2\\
  g(x) &= \frac{1}{x}\\
  F(x) &= \int^a_b \frac{1}{3}x^3
\end{align*}
endsnippet 
