{
    "root": true,
    "plugins": [
        "node",
        "jest",
        "promise",
        "mongodb",
        "optimize-regex",
        "json"
    ],
    "extends": [
        "standard",
        "plugin:node/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:jest/recommended",
        "plugin:promise/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "jest/globals": true,
        "mongo": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "codeFrame": false,
        "ecmaFeatures": {
            "jsx": false,
            "impliedStrict": true
        }
    },
    "rules": {
        "array-bracket-newline": [1, {"minItems": 6, "multiline": true}],
        "array-element-newline": [1, {"minItems": 6, "multiline": true}],
        "arrow-spacing": 1,
        "block-spacing": 1,
        "brace-style": [2, "stroustrup"],
        "camelcase": 1,
        "class-methods-use-this": 1,
        "comma-dangle": [1, "always-multiline"],
        "comma-spacing": [1, {"before": false, "after": true}],
        "comma-style": [2, "last"],
        "complexity": [1, {"max": 2}],
        "curly": 1,
        "default-case": 1,
        "dot-location": [1, "property"],
        "eol-last": 1,
        "eqeqeq": [1, "always"],
        "filenames/match-exported": 0,
        "filenames/match-regex": 0,
        "filenames/no-index": 0,
        "func-names": 1,
        "func-style": [2, "declaration", {"allowArrowFunctions": true}],
        "global-require": 1,
        "handle-callback-err": 1,
        "indent": [1, 2],
        "jsx-quotes": [1, "prefer-single"],
        "key-spacing": 1,
        "keyword-spacing": [1, {"before": true, "after": true}],
        "linebreak-style": [2, "unix"],
        "max-depth": [1, {"max": 3}],
        "max-nested-callbacks": [1, {"max": 3}],
        "max-statements-per-line": [1, {"max": 1}],
        "no-confusing-arrow": 1,
        "no-const-assign": 2,
        "no-dupe-args": 2,
        "no-dupe-class-members": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-duplicate-imports": 1,
        "no-empty": 2,
        "no-empty-function": 2,
        "no-empty-pattern": 1,
        "no-extra-boolean-cast": 2,
        "no-extra-label": 1,
        "no-extra-parens": 2,
        "no-extra-semi": 1,
        "no-global-assign": 2,
        "no-invalid-regexp": 2,
        "no-invalid-this": 2,
        "no-lonely-if": 1,
        "no-mixed-operators": 1,
        "no-multi-spaces": 1,
        "no-redeclare": 2,
        "no-regex-spaces": 1,
        "no-return-assign": 2,
        "no-tabs": 1,
        "no-undef-init": 2,
        "no-undefined": 2,
        "no-unexpected-multiline": 1,
        "no-unreachable": 2,
        "no-unused-expressions": 1,
        "no-unused-vars": 1,
        "no-use-before-define": 2,
        "no-useless-call": 1,
        "no-useless-concat": 1,
        "no-useless-escape": 1,
        "no-useless-rename": 1,
        "no-useless-return": 1,
        "no-var": 1,
        "no-with": 1,
        "object-curly-newline": [1, {"multiline": true, "consistent": true, "minProperties": 3}],
        "object-property-newline": [1, {"allowMultiplePropertiesPerLine": true}],
        "optimize-regex/optimize-regex": 1,
        "prefer-arrow-callback": 1,
        "prefer-const": 1,
        "prefer-numeric-literals": 1,
        "prefer-template": 1,
        "quotes": [1, "single"],
        "semi": [1, "never"],
        "sort-imports": 0,
        "sort-keys": 1,
        "spaced-comment": 1,
        "strict": 1,
        "valid-jsdoc": 1,
        "vars-on-top": 1,
        "yoda": 1
    }
}
