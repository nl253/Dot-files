{
    "root": true,
    "plugins": ["node", "mocha", "jsdoc", "promise"],
    "extends": ["plugin:import/errors", "plugin:import/warnings", "plugin:promise/recommended"],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "mongo": true,
        "mocha": true,
        "es6": true,
        "jquery": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        },
        "codeFrame": false

    },
    "rules": {
        "arrow-spacing": 1,
        "brace-style": [2, "stroustrup"],
        "comma-spacing": [1, {
            "before": false,
            "after": true
        }],
        "comma-style": [2, "last"],
        "comma-dangle": [1, "always-multiline"],
        "curly": 1,
        "default-case": 1,
        "eqeqeq": [2, "always"],
        "func-style": [2, "declaration", {
            "allowArrowFunctions": true
        }],
        "indent": [1, 4],
        "key-spacing": 1,
        "keyword-spacing": 1,
        "linebreak-style": [2, "unix"],
        "no-dupe-args": 2,
        "no-duplicate-case": 2,
        "no-duplicate-imports": 1,
        "no-empty": 2,
        "no-empty-function": 2,
        "no-empty-pattern": 1,
        "no-extra-boolean-cast": 2,
        "no-extra-label": 1,
        "no-extra-parens": 2,
        "no-extra-semi": 1,
        "no-invalid-regexp": 2,
        "no-redeclare": 2,
        "no-regex-spaces": 1,
        "no-return-assign": 2,
        "no-undefined": 2,
        "no-unreachable": 2,
        "no-unused-expressions": 1,
        "no-unused-vars": 1,
        "no-use-before-define": 2,
        "no-useless-concat": 1,
        "no-useless-escape": 1,
        "no-useless-return": 1,
        "prefer-numeric-literals": 1,
        "quotes": [1, "double"],
        "semi": [1, "never"],
        "sort-imports": 1,
        "strict": 0,
        "vars-on-top": 2,
        "yoda": [1, "never"],
        "node/shebang": 2,
        "node/no-missing-import": 2,
        "node/no-unpublished-require": 2,
        "node/no-unpublished-import": 2,
        "node/no-missing-require": 2,
        "jsdoc/check-param-names": 1,
        "jsdoc/check-tag-names": 1,
        "jsdoc/check-types": 1,
        "jsdoc/newline-after-description": 1,
        "jsdoc/require-description-complete-sentence": 1,
        "jsdoc/require-example": 1,
        "jsdoc/require-hyphen-before-param-description": 1,
        "jsdoc/require-param": 1,
        "jsdoc/require-param-description": 1,
        "jsdoc/require-param-type": 1,
        "jsdoc/require-returns-description": 1,
        "jsdoc/require-returns-type": 1,
        "mocha/no-exclusive-tests": 2
    }
}
