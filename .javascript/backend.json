{
  "name": "Backend",
  "version": "0.0.1-alpha",
  "private": true,
  "scripts": {
    "build": "webpack",
    "clean": "find -name tags -and -type f -exec rm {} +; rm -rf {docs,dist}/*",
    "docs": "node_modules/.bin/jsdoc --verbose --destination docs/ --recurse $(git ls-files | grep -E '\.js$')",
    "eslint": "node_modules/.bin/eslint $(git ls-files | grep -E '\.js$')",
    "read": "cd docs && python3 -m http.server",
    "start": "node --harmony dist/app.js",
    "test": "node_modules/.bin/jest"
  },
  "dependencies": {
    "babel-cli": "*",
    "babel-core": "*",
    "babel-polyfill": "*",
    "babel-preset-env": "*",
    "babel-register": "*",
    "body-parser": "~1.17.1",
    "express-session": "*",
    "express-validator": "*",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "mongoose": "^4.11.11",
    "morgan": "~1.8.1",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony-v2.8.22",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "validator": "*",
    "webpack": "^3.6.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "eslint-config-backend-express": "https://github.com/nl253/eslint-config-backend-express",
    "jest": "^21.0.2",
    "js-beautify": "*",
    "jsdoc": "*",
    "nodemon": "*",
    "webpack-dev-server": "^2.8.2"
  },
  "eslintConfig": {
    "extends": "eslint-config-backend-express"
  }
}
