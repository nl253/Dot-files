{
    "exclude": ["node_modules"],
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "jsx": "React",
        "module": "commonjs",
        "outDir": "dist",
        "pretty": true,
        "importHelpers": true,
        "sourceRoot": "src",
        "rootDir": "src",
        "types": ["node", "express", "jquery", "jest"],
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "baseUrl": "."
    },
    "include": [
        "src/*.ts",
        "src/*/*.ts",
        "src/*/*/*.ts"
    ]
}
